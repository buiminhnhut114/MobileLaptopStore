<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="10dp"
    android:id="@+id/itemHD1"
    android:gravity="center"
    android:background="@drawable/background_search"
    >

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/ip14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/ivIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaHoaDon"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Mã Hóa Đơn: 1"
            android:textStyle="bold"
            android:textColor="#090808"/>

        <TextView
            android:id="@+id/tvMaSanPham"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Mã Sản Phẩm: 2"
            android:textStyle="bold"
            android:textColor="#090808"/>

        <TextView
            android:id="@+id/tvTenSP"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="Tên SP: Iphone 14 pro max"
            android:textColor="#090808" />

        <TextView
            android:id="@+id/tvGia"
            android:text="Giá: 45.000.000 VNĐ"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="#090808"/>

        <TextView
            android:id="@+id/tvMauSac"
            android:text="Màu săc: Tím"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="#090808"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng: abc"
            android:textColor="#090808" />

        <TextView
            android:id="@+id/tvSdtKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sđt:09xxxxxxxxxxx"
            android:textColor="#090808" />

        <TextView
            android:id="@+id/tvDchiKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ : Hà Đông - Hà Nội "
            android:textColor="#090808" />

        <TextView
            android:id="@+id/tvMaKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Khuyến Mãi: "
            android:textColor="#090808" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="200dp"
            android:text="Tổng tiền : 13.500.000 VNĐ"
            android:textColor="#090808"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNgayTao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Ngày tạo: 22/10/2022"
            android:textColor="#090808" />

        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#090808" />

        <Button
            android:id="@+id/btnThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Thanh Toán" />
    </LinearLayout>
</RelativeLayout>
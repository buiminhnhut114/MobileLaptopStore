<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập Nhật Nhân Viên"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvmanv1"
            android:layout_marginLeft="45dp"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="Mã: 1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"/>

    </LinearLayout>
    <EditText
        android:id="@+id/edt_Hoten1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Họ tên"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24_1"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edt_ngaysinh1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Ngày Sinh"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edt_sodienthoai1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Số Điện Thoại1"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edt_chucvu1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Chức vụ"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_person_24_1"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edt_Tendangnhap1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Tên đang nhập"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_baseline_person_24_1"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edt_Matkhau1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_dialog"
        android:padding="18dp"
        android:hint="Mật khẩu"
        android:textSize="13dp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_baseline_https_24_1"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Them1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_dialog"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Sửa"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/tv_Thoatnv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="23dp"/>


</LinearLayout>